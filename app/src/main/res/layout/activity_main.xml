<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/botao">


    <RadioGroup
        android:id="@+id/rdgPrincipal"
        android:layout_width="400dp"
        android:layout_height="268dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"

        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <RadioButton
            android:id="@+id/rbA"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btncor1"
            android:text="@string/texto_alternativa_a" />

        <RadioButton
            android:id="@+id/rbB"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btncor1"
            android:text="@string/texto_alternativa_b" />

        <RadioButton
            android:id="@+id/rbC"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btncor1"
            android:text="@string/texto_alternativa_c" />

        <RadioButton
            android:id="@+id/rbD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btncor1"
            android:gravity="center"
            android:text="@string/texto_alternativa_d" />
    </RadioGroup>

    <Button
        android:id="@+id/btnResponder"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:text="Responder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btncor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdgPrincipal" />

    <TextView
        android:id="@+id/txvPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="EspaÃ§o de pergunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>